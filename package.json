  "peerDependencies": {
    "@mermaid-js/mermaid-cli": ">= 8.13.7 < 10",
    "braid-design-system": ">= 31.0.0",
    "react": ">= 17 < 19",
    "react-router-dom": ">= 5.3.0",
    "sku": ">= 10.13.4 < 12"
  },
